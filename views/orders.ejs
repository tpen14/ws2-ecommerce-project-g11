<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %></title>
   <link rel="icon" type="image/png" href="/images/chonccolate.png">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navigation Bar -->
    <nav class="navbar">
        <a href="/" class="navbar-brand">
            <img src="/images/chonccolate.png" alt="Chonccolate" class="navbar-logo">
            Chonccolate
        </a>
        
        <ul class="navbar-links" id="navbarLinks">
            <li><a href="/" >Home</a></li>
            <li><a href="/products">Products</a></li>
           

            <% if (locals.user && (locals.user.role === 'admin' || locals.user.role === 'customer')) { %>
              <li><a href="/orders" class="active">Orders</a></li>
            <% } %>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
       <div class="auth-buttons" id="authButtons">
            <% if (locals.user && locals.user.role === 'customer') { %>
              <a href="/cart" class="cart-icon-link" title="Shopping Cart">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
              </a>
            <% } %>
            <% if (locals.user) { %>
                <a href="/users/dashboard" class="auth-button login">Dashboard</a>
                <a href="/users/logout" class="auth-button register">Logout</a>
            <% } else { %>
                <a href="/users/login" class="auth-button login">Login</a>
                <a href="/users/register" class="auth-button register">Register</a>
            <% } %>
        </div>
    </nav>

  <main class="main-content">
    <div class="products-container">
      <div class="dashboard-header">
        <h1>Orders</h1>
      </div>

      <div class="orders-controls" style="display:flex;align-items:center;gap:12px;margin-bottom:12px;">
        <form method="GET" action="/orders" style="display:flex;gap:8px;align-items:center;" id="ordersFilterForm" data-total-pages="<%= typeof totalPages !== 'undefined' ? totalPages : 1 %>">
          <label for="statusFilter">Status:</label>
          <select id="statusFilter" name="status">
            <option value="all" <%= (typeof currentStatus === 'undefined' || currentStatus === 'all') ? 'selected' : '' %>>All</option>
            <% if (Array.isArray(statuses)) { statuses.forEach(s => { %>
              <option value="<%= s %>" <%= (typeof currentStatus !== 'undefined' && currentStatus === s) ? 'selected' : '' %>><%= s %></option>
            <% }) } %>
          </select>
          <button type="submit" class="secondary-button">Filter</button>
          <label for="pageInput" style="margin-left:8px;">Page</label>
          <input type="number" id="pageInput" name="page" min="1" max="<%= typeof totalPages !== 'undefined' ? totalPages : 1 %>" value="<%= page || 1 %>" style="width:70px;padding:6px;border-radius:4px;border:1px solid #ccc;">
          <button type="button" id="pageGoBtn" class="secondary-button">Go</button>
        </form>
        <% if (typeof totalCount !== 'undefined') { %>
          <div style="margin-left:auto;color:#555;">Showing page <%= page %> of <%= totalPages %> — <%= totalCount %> orders</div>
        <% } %>
      </div>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert success-alert" id="orderAlert" role="status" style="margin:12px 0;padding:10px;border-radius:6px;background:#e6ffed;border:1px solid #b7f0c9;color:#064a2a;display:flex;justify-content:space-between;align-items:center;">
          <div><strong>Success:</strong> <%= success %></div>
          <button aria-label="Dismiss" onclick="document.getElementById('orderAlert').style.display='none'" style="background:transparent;border:none;cursor:pointer;font-size:1.1rem;">✕</button>
        </div>
        <script>setTimeout(()=>{document.getElementById('orderAlert')?.style.display='none'},5000)</script>
      <% } %>

      <% if (!locals.user) { %>
        <div class="user-info-card">
          <p>Please <a href="/users/login">log in</a> to view your orders.</p>
        </div>
      <% } else { %>
        <% 
          const userId = locals.user.userId;
          const userOrders = (locals.user.role === 'admin' || !orders) ? (orders || []) : (orders || []).filter(o => String(o.userId) === String(userId));
        %>

        <% if (!userOrders || userOrders.length === 0) { %>
          <div class="user-info-card">
            <p>No orders found.</p>
          </div>

          <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
            <nav class="pagination" aria-label="Orders pagination" style="margin-top:12px;display:flex;justify-content:center;">
              <ul class="pagination-list" style="list-style:none;display:flex;gap:6px;padding:0;margin:0;align-items:center;">
                <% const qsStatus = (typeof currentStatus !== 'undefined' && currentStatus !== 'all') ? ('status=' + encodeURIComponent(currentStatus) + '&') : ''; %>
                <% if (page > 1) { %>
                  <li><a href="/orders?<%= qsStatus %>page=<%= page-1 %>" class="secondary-button">Previous</a></li>
                <% } %>
                <% for (let p = 1; p <= totalPages; p++) { %>
                  <li>
                    <a href="/orders?<%= qsStatus %>page=<%= p %>" class="<%= p === page ? 'primary-button' : 'secondary-button' %>"><%= p %></a>
                  </li>
                <% } %>
                <% if (page < totalPages) { %>
                  <li><a href="/orders?<%= qsStatus %>page=<%= page+1 %>" class="secondary-button">Next</a></li>
                <% } %>
              </ul>
            </nav>
          <% } %>
        <% } else { %>
          <div class="user-info-card">
            <% if (locals.user && locals.user.role === 'admin') { %>
              <table class="user-table" role="table" aria-label="Orders">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Customer Email</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% userOrders.forEach(o => { %>
                    <tr>
                      <td><a href="/orders/<%= o.orderId %>"><%= o.orderId %></a></td>
                      <td><%= o.customerEmail || '' %></td>
                      <td>₱<%= ((o.totalAmount || 0)).toFixed(2) %></td>
                      <td><%= o.orderStatus || 'Unknown' %></td>
                      <td><%= o.createdAt ? new Date(o.createdAt).toLocaleString() : '-' %></td>
                      <td><a class="secondary-button" href="/orders/<%= o.orderId %>">View</a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <table class="user-table" role="table" aria-label="Orders">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% userOrders.forEach(o => { %>
                    <tr>
                      <td><a href="/orders/<%= o.orderId %>"><%= o.orderId %></a></td>
                      <td>
                        <% if (o.createdAt) { %>
                          <%= new Date(o.createdAt).toLocaleString() %>
                        <% } else { %>
                          -
                        <% } %>
                      </td>
                      <td><%= Array.isArray(o.items) ? o.items.length : (o.items ? o.items.length : 0) %></td>
                      <td>₱<%= (o.totalAmount || 0).toFixed(2) %></td>
                      <td><%= o.orderStatus || 'Unknown' %></td>
                      <td>
                        <a class="secondary-button" href="/orders/<%= o.orderId %>">View</a>
                        <% if (locals.user.role !== 'admin' && !['completed','refund','cancelled'].includes(o.orderStatus)) { %>
                            <form action="/orders/<%= o.orderId %>/cancel" method="POST" class="inline-form" style="display:inline">
                            <button type="submit" class="secondary-button" onclick="return confirm('Cancel this order?')">Cancel</button>
                          </form>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } %>
          </div>
        <% } %>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <div class="footer-container">
      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/products">Products</a></li>
          <li><a href="/about">About Us</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h3>Legal</h3>
        <ul>
          <li><a href="/terms">Terms of Service</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> Chonccolate. All rights reserved.</p>
    </div>
  </footer>

  <script>
    document.getElementById('menuToggle')?.addEventListener('click', function() {
      document.getElementById('navbarLinks')?.classList.toggle('active');
      document.getElementById('authButtons')?.classList.toggle('active');
    });
    // Jump to page helper for orders (clamps to available pages)
    (function(){
      const goBtn = document.getElementById('pageGoBtn');
      const pageInput = document.getElementById('pageInput');
      const form = document.getElementById('ordersFilterForm');
      // total pages from server (fallback to 1)
      // read total pages from the form dataset (provided by server)
      const TOTAL_PAGES = form ? parseInt(form.dataset.totalPages || '1', 10) : 1;
      if (pageInput) {
        pageInput.setAttribute('max', String(TOTAL_PAGES));
      }
      if (goBtn && pageInput && form) {
        goBtn.addEventListener('click', function(){
          // ensure a sensible value and clamp to [1, TOTAL_PAGES]
          let v = parseInt(pageInput.value, 10) || 1;
          if (v < 1) v = 1;
          if (v > TOTAL_PAGES) v = TOTAL_PAGES;
          pageInput.value = v;
          form.submit();
        });

        // also clamp on manual input change
        pageInput.addEventListener('change', function(){
          let v = parseInt(pageInput.value, 10) || 1;
          if (v < 1) v = 1;
          if (v > TOTAL_PAGES) v = TOTAL_PAGES;
          pageInput.value = v;
        });
      }
    })();
  </script>
</body>
</html>