<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <a href="/" class="navbar-brand">
            <img src="/images/chonccolate.png" alt="Chonccolate" class="navbar-logo">
            Chonccolate
        </a>
        
        <ul class="navbar-links" id="navbarLinks">
            <li><a href="/">Home</a></li>
            <li><a href="/products">Products</a></li>
        
            <% if (locals.user && locals.user.role === 'customer') { %>
              <li><a href="/cart">Cart</a></li>
            <% } %>

            <% if (locals.user && (locals.user.role === 'admin' || locals.user.role === 'customer')) { %>
              <li><a href="/orders">Orders</a></li>
            <% } %>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li> 
        </ul>
        <div class="auth-buttons" id="authButtons">
            <% if (locals.user) { %>
                <a href="/users/dashboard" class="auth-button login">Dashboard</a>
                <a href="/users/logout" class="auth-button register">Logout</a>
            <% } else { %>
                <a href="/users/login" class="auth-button login">Login</a>
                <a href="/users/register" class="auth-button register">Register</a>
            <% } %>
        </div>
         
    </nav>

    <div class="admin-container">
        <h1>Support Tickets</h1>

        <div class="filter-bar">
            <a href="/admin/tickets" class="filter-btn <%= currentStatus === 'all' ? 'active' : '' %>">All</a>
            <% statuses.forEach(status => { %>
                <a href="/admin/tickets?status=<%= encodeURIComponent(status) %>" 
                   class="filter-btn <%= currentStatus === status ? 'active' : '' %>">
                    <%= status.charAt(0).toUpperCase() + status.slice(1) %>
                </a>
            <% }) %>
        </div>

        <% if (tickets.length === 0) { %>
            <p class="no-data">No tickets found.</p>
        <% } else { %>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Ticket ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% tickets.forEach(ticket => { %>
                        <tr>
                            <td><%= ticket.ticketId.substring(0, 8) %></td>
                            <td><%= ticket.name %></td>
                            <td><%= ticket.email %></td>
                            <td><%= ticket.subject %></td>
                            <td><span class="badge priority-<%= ticket.priority %>"><%= ticket.priority %></span></td>
                            <td><span class="badge status-<%= ticket.status.replace(' ', '-') %>"><%= ticket.status %></span></td>
                            <td><%= new Date(ticket.createdAt).toLocaleDateString() %></td>
                            <td>
                                <a href="/tickets/<%= ticket.ticketId %>" class="btn-small">View</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>